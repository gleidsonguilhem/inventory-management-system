

@inject IViewInventoryByNameUseCase ViewInventoryByNameUseCase;


<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (inventories is not null && inventories.Count > 0)
        {
            foreach (var inv in inventories)
            {
                <InventoryListItemComponent Inventory="inv"></InventoryListItemComponent>
            }
        }
    </tbody>
</table>

<br />

<a href="/add-inventory" class="btn btn-primary"> Add Item </a>



@code {

    private List<Inventory>? inventories;

    protected override async Task OnInitializedAsync()
    {
        inventories = (await ViewInventoryByNameUseCase.ExecuteAsync("")).ToList();
    }
}